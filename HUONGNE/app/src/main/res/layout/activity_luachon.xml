<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuachonActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="CHỌN"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroupLC"
        android:layout_width="378dp"
        android:layout_height="144dp"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="16dp">

        <RadioButton
            android:id="@+id/radioButtonPheptinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phép tinh" />

        <RadioButton
            android:id="@+id/radioButtonUSCLN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tìm USCLN" />

        <RadioButton
            android:id="@+id/radioButtonTimgtN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tìm n!" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonCHON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="CHỌN"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupLC"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonTHOAT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:text="THOÁT"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCHON"
        app:layout_constraintStart_toEndOf="@+id/buttonCHON"
        app:layout_constraintTop_toTopOf="@+id/buttonCHON"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>